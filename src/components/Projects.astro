---
import NextjsIcon from '../icons/technologyIcons/NextjsIcon.astro';
import CSSIcon from '../icons/technologyIcons/CSSIcon.astro';
import TailwindIcon from '../icons/technologyIcons/TailwindIcon.astro';
import Html5Icon from '../icons/technologyIcons/Html5Icon.astro';
import JavasScriptIcon from '../icons/technologyIcons/JavasScriptIcon.astro';
import GitHubIcon from '../icons/usefullIcons/GitHubIcon.astro';
import LinkButton from './LinkButton.astro';
import LinkIcon from '../icons/usefullIcons/LinkIcon.astro';

const TAGS = {
    NEXT: {
        title: 'Next.js',
        class: 'bg-black text-white',
        icon: NextjsIcon,
    },
    HTML: {
        title: 'HTML',
        class: 'bg-black text-white',
        icon: Html5Icon,
    },
    CSS: {
        title: 'CSS',
        class: 'bg-black text-white',
        icon: CSSIcon,
    },
    JAVASCRIPT: {
        title: 'JavaScript',
        class: 'bg-black text-white',
        icon: JavasScriptIcon,
    },
    TAYLWIND: {
        title: 'Tailwind CSS',
        class: 'bg-black text-green',
        icon: TailwindIcon,
    },
};

const PROJECTS = [
    {
        title: 'project1',
        description:
            'this is the long description of the projecto where i can put the text where i describe my very beautifull programming project',
        link: 'project url',
        github: 'project repository url',
        image: 'https://via.placeholder.com/300x200',
        tags: [TAGS.NEXT, TAGS.HTML, TAGS.CSS, TAGS.JAVASCRIPT],
    },
    {
        title: 'project2',
        description:
            'this is the long description of the projecto where i can put the text where i describe my very beautifull programming project',
        link: 'project url',
        github: 'project repository url',
        image: 'https://via.placeholder.com/300x200',
        tags: [TAGS.JAVASCRIPT, TAGS.TAYLWIND],
    },
];
---

<div class="flex flex-col gap-y-16">
    {
        PROJECTS.map(({ image, title, description, tags, link, github }) => (
            <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
                <div class="w-full md:w-1/2">
                    <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
                        <img
                            alt="image"
                            class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105"
                            loading="lazy"
                            src={image}
                        />
                    </div>
                </div>

                <div class="w-full md:w-1/2 md:max-w-lg">
                    <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
                        {title}
                    </h3>
                    <div class="flex flex-wrap mt-2">
                        <ul class="flex flex-row mb-2 gap-x-2">
                            {tags.map((tag) => (
                                <li>
                                    <span
                                        class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
                                    >
                                        {tag.title} <tag.icon class="size-4" />
                                    </span>
                                </li>
                            ))}
                        </ul>

                        <div class="mt-2 text-gray-700 dark:text-gray-400">
                            {description}
                        </div>
                        <footer class="flex items-end justify-start mt-4 gap-x-4">
                            {github && (
                                <LinkButton href={github}>
                                    <GitHubIcon class="size-6" />
                                    Code
                                </LinkButton>
                            )}
                            {link && (
                                <LinkButton href={link}>
                                    <LinkIcon class="size-4" />
                                    Preview
                                </LinkButton>
                            )}
                        </footer>
                    </div>
                </div>
            </article>
        ))
    }
</div>
