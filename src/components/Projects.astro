---
import NextjsIcon from '../icons/technologyIcons/NextjsIcon.astro';
import CSSIcon from '../icons/technologyIcons/CSSIcon.astro';
import TailwindIcon from '../icons/technologyIcons/TailwindIcon.astro';
import Html5Icon from '../icons/technologyIcons/Html5Icon.astro';
import JavasScriptIcon from '../icons/technologyIcons/JavasScriptIcon.astro';

const TAGS = {
    NEXT: {
        title: 'Next.js',
        class: 'bg-black text-white',
        icon: NextjsIcon,
    },
    HTML: {
        title: 'HTML',
        class: 'bg-black text-white',
        icon: Html5Icon,
    },
    CSS: {
        title: 'CSS',
        class: 'bg-black text-white',
        icon: CSSIcon,
    },
    JAVASCRIPT: {
        title: 'JavaScript',
        class: 'bg-black text-white',
        icon: JavasScriptIcon,
    },
    TAYLWIND: {
        title: 'Tailwind CSS',
        class: 'bg-black text-white',
        icon: TailwindIcon,
    },
};

const PROJECTS = [
    {
        title: 'project1',
        description:
            'this is the long description of the projecto where i can put the text where i describe my very beautifull programming project',
        link: 'project url',
        github: 'project repository url',
        image: 'https://via.placeholder.com/300x200',
        tags: [TAGS.NEXT, TAGS.HTML, TAGS.CSS, TAGS.JAVASCRIPT],
    },
    {
        title: 'project2',
        description:
            'this is the long description of the projecto where i can put the text where i describe my very beautifull programming project',
        link: 'project url',
        github: 'project repository url',
        image: 'https://via.placeholder.com/300x200',
        tags: [TAGS.NEXT, TAGS.HTML, TAGS.CSS, TAGS.JAVASCRIPT, TAGS.TAYLWIND],
    },
];
---

{
    PROJECTS.map(({ title, description, link, github, image, tags }) => {
        return (
            <article>
                <h3>{title}</h3>
                <p>{description}</p>
                <ul class="flex flex-row gap-4">
                    {tags.map((tag) => {
                        {
                            return (
                                <span
                                    class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 m-2`}
                                >
                                    {tag.title}
                                    <tag.icon class="size-4" />
                                </span>
                            );
                        }
                    })}
                </ul>
                <img src={image} alt={`Screenshot of ${title}`} />
            </article>
        );
    })
}
