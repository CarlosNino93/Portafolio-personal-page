---
interface Props {
    href: string;
    class?: string;
}

const { href, class: className } = Astro.props;
---

<a
    href={href}
    class:list={[
        'inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium ring-1 ring-gray-500 transition-colors hover:bg-gray-200 hover:ring-0 focus-visible:ring-0 focus-visible:bg-gray-200 disabled:pointer-events-none disabled:opacity-50 size-8',
        className,
    ]}
    aria-label="Web Links"
>
    <slot /></a
>
