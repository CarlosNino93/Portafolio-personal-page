---
import '../styles/global.css';
import Layout from '../layouts/Layout.astro';
import Badge from '../components/Badge.astro';
import GitHubIcon from '../icons/usefullIcons/GitHubIcon.astro';
import LinkedInIcon from '../icons/usefullIcons/LinkedInIcon.astro';
import PDFIcon from '../icons/usefullIcons/PDFIcon.astro';
import UrlPill from '../components/UrlPill.astro';
import MailIcon from '../icons/usefullIcons/MailIcon.astro';
import Experience from '../components/Experience.astro';
import SectionContainer from '../components/SectionContainer.astro';
import BriefCaseIcon from '../icons/usefullIcons/BriefCaseIcon.astro';
import CodeIcon from '../icons/usefullIcons/CodeIcon.astro';
import Projects from '../components/Projects.astro';
import EducationIcon from '../icons/usefullIcons/EducationIcon.astro';
import Education from '../components/Education.astro';
import CertificateIcon from '../icons/usefullIcons/CertificateIcon.astro';
import Certificates from '../components/Certificates.astro';

let renderExperience = true;
let renderProjects = true;
let renderEducation = true;
let renderCertificates = true;
---

<Layout title="Carlos Niño - Developer and Electronic Engineer">
    <main class="pb-20 mx-8 sm:m-x-0">
        <SectionContainer class="py-44">
            <h1
                class="text-white text-5xl font-bold flex flex-row gap-x-4 pb-4"
            >
                Hey!, I'am Carlos Niño
                <a
                    href="https://www.linkedin.com/in/carlos-d-nino-r/"
                    target="_blank"
                    rel="noopener"
                    class="flex justify-center items-center"
                >
                    <Badge>Ready To Work</Badge>
                </a>
            </h1>
            <h2 id="about-me" class="text-2xl space-y-2 opacity-80">
                <p>
                    3+ Years using diferent JavaScript frameworks to migrate old
                    web pages as a freelance.
                </p>
                <p>This frameworks include Angular, Next.js, and Astro.</p>
            </h2>
            <nav class="flex flex-wrap gap-4 justify-around p-4">
                <UrlPill href="https://github.com/CarlosNino93">
                    <GitHubIcon class="size-6" />
                    GitHub
                </UrlPill>
                <UrlPill href="https://www.linkedin.com/in/carlos-d-nino-r/">
                    <LinkedInIcon size="25" />
                    LinkedIn
                </UrlPill>
                <UrlPill
                    href="/Portafolio-personal-page/assets/CarlosNinoFullStack.pdf"
                >
                    <PDFIcon size="25" />
                    Curriculum
                </UrlPill>
                <UrlPill href="mailto:carlosndr93@gmail.com">
                    <MailIcon />
                    carlosndr93@gmail.com
                </UrlPill>
            </nav>
        </SectionContainer>

        {
            renderExperience && (
                <SectionContainer id="experience">
                    <header class="flex flex-row gap-x-2 mb-4 items-center">
                        <BriefCaseIcon class="size-9" />
                        <h2 class="text-4xl font-semibold p-4">Experience</h2>
                    </header>
                    <Experience />
                </SectionContainer>
            )
        }
        {
            renderProjects && (
                <SectionContainer id="projects">
                    <header class="flex flex-row gap-x-2 mb-4 items-center">
                        <CodeIcon class="size-9" />
                        <h2 class="text-4xl font-semibold p-4">Projects</h2>
                    </header>
                    <Projects />
                </SectionContainer>
            )
        }
        {
            renderEducation && (
                <SectionContainer id="education">
                    <header class="flex grow gap-x-2 mb-4 items-center">
                        <EducationIcon class="size-9" />
                        <h2 class="text-4xl font-semibold p-4">Education</h2>
                    </header>
                    <Education />
                </SectionContainer>
            )
        }
        {
            renderCertificates && (
                <SectionContainer id="Certificates">
                    <header class="flex grow gap-x-2 mb-4 items-center">
                        <CertificateIcon class="size-9" />
                        <h2 class="text-4xl font-semibold p-4">Certificates</h2>
                    </header>
                    <Certificates />
                </SectionContainer>
            )
        }
    </main>
</Layout>
